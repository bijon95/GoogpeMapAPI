<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/ext"
    android:orientation="vertical"
    tools:context="info.bijon.googpemapapi.HomeActivity">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ViewFlipper
android:id="@+id/viewFliper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/filesystem"

            android:id="@+id/imageView" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/doc"

            android:id="@+id/imageView2" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/maxresdefault"

            android:id="@+id/imageView3" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/slide"

            android:id="@+id/imageView4" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/maxresdefault"

            android:id="@+id/imageView5" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/maxresdefault"

            android:id="@+id/imageView6" />

    </ViewFlipper>
    </LinearLayout>

    <LinearLayout
        android:paddingTop="20dp"
        android:layout_weight="1"
       android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_person_black_24dp"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:id="@+id/admin"
            />

        <Button
        android:layout_marginLeft="10dp"
        android:background="@drawable/doc"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:id="@+id/button2"

        android:layout_marginEnd="39dp" />

    </LinearLayout>
</LinearLayout>
